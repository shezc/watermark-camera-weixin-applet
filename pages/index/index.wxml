<view>
  <span class="flash" bindtap='changeFlashMode'>{{ cameraObj[cameraMode[cameraIndex]] }}</span>
  <span class="devicePosition iconfont icon-reverse" bindtap='changeDevicePosition' />
  <div class="camera">
    <camera
      class="camera"
      resolution="high"
      device-position="{{deviceName === '前置' ? 'front' : 'back'}}"
      flash="{{cameraMode[cameraIndex]}}"
      mode="normal"
      frame-size="small" />
      
      <wxml-to-canvas
        bindtouchstart="touchStart"
        bindtouchmove="move"
        class="widget"
        bindtouchend="touchEnd"
        style="position: fixed;left:{{pageX}}px;top:{{pageY}}px;z-index: 10;opacity: 0.2;" />
  </div>

  <wxml-to-canvas class="widget"></wxml-to-canvas>

  <!-- frame-size="large"拍照图片高清 -->
  <!-- 录像 -->
  <span class="take_video iconfont icon-luxiang" bindtap='renderToCanvas' />
  <!-- 拍照 -->
  <span class="take_photo iconfont icon-photo" />
  <!-- 查看相册 -->
  <span class="get_position iconfont icon-album"  bindtap='showPosition' />
</view>